{{#each questions}}
    <div class="col-sm-5 col-md-6 col-12 pb-4">
        <div class="comment mt-4 text-justify float-left border border-dark">
            <h4>{{title}}</h4>
            <p>{{content}}</p>
            <span>- {{createdAt}}</span>
            <br>
            <span>Author: {{author.username}}</span>
            <a href="//localhost:3000/questions/{{_id}}">Click to see answers</a>
            <form action="/questions/{{_id}}?_method=DELETE" method="post">
                <button value="submit">Delete question</button>
            </form>
        </div>
    </div>
{{/each}}